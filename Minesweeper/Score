namespace Minesweeper
{
    using System;

    public class Score
    {
        private string name;
        private int points;

        public Score()
        {
        }

        public Score(string name, int currentPoints)
        {
            this.name = name;
            this.points = currentPoints;
        }

        public string Name
        {
            get 
            { 
                return this.name; 
            }

            set 
            { 
                this.name = value; 
            }
        }

        public int Points
        {
            get 
            { 
                return this.points; 
            }

            set 
            { 
                this.points = value; 
            }
        }
    } 
}
